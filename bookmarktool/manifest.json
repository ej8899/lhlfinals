{
  "manifest_version": 3,

  "name": "Save URL",
  "description": "This extension saves the URL of the current tab in a variable",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "identity"
  ],

  "host_permissions": [
    "*://*/*",
    "http://localhost:3000/"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["spinner.css"]  
    }
  ]
}